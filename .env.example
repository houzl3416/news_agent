# NEWS GT 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ============================================
# 应用配置
# ============================================
APP_NAME=NEWS_GT
APP_VERSION=0.1.0
APP_ENV=development  # development, staging, production
DEBUG=true

# ============================================
# 数据库配置（默认SQLite，零配置）
# ============================================
# 使用SQLite（推荐用于学习和演示）
DATABASE_URL=sqlite:///./news_gt.db

# 或使用PostgreSQL（生产环境）
# DATABASE_URL=postgresql://user:password@localhost:5432/news_gt
# DATABASE_POOL_SIZE=10
# DATABASE_MAX_OVERFLOW=20

# ============================================
# Redis 配置（可选，用于异步任务队列）
# ============================================
# REDIS_URL=redis://localhost:6379/0

# ============================================
# AI 服务配置
# ============================================
# OpenAI
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-xxx
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ============================================
# 搜索 API
# ============================================
# SerpAPI (Google Search)
SERPAPI_KEY=xxx

# Bing Search
BING_SEARCH_KEY=xxx

# ============================================
# 社交媒体 API
# ============================================
# Twitter/X API
TWITTER_BEARER_TOKEN=xxx
TWITTER_API_KEY=xxx
TWITTER_API_SECRET=xxx

# ============================================
# 数据源 API
# ============================================
# SEC EDGAR (无需密钥，但需要User-Agent)
SEC_USER_AGENT="NEWS_GT/0.1 (your@email.com)"

# Bloomberg API (如果有)
BLOOMBERG_API_KEY=xxx

# ============================================
# TaaS API 配置
# ============================================
# API 密钥管理
TAAS_API_KEY_SALT=random_salt_for_api_key_hashing

# 速率限制
TAAS_RATE_LIMIT_PER_MINUTE=60
TAAS_RATE_LIMIT_PER_HOUR=1000

# ============================================
# Agent 配置
# ============================================
# 监控哨兵
MONITOR_ENABLED=true
MONITOR_CHECK_INTERVAL=300  # 秒

# 溯源猎手
SOURCE_HUNTER_SEARCH_DEPTH=3
SOURCE_HUNTER_MAX_RESULTS=10

# 核查专家
VERIFIER_TIMEOUT=30  # 秒
VERIFIER_PRIMARY_SOURCES=SEC,Bloomberg,Reuters

# ============================================
# EKG 配置
# ============================================
EKG_INITIAL_CREDIT_SCORE=50
EKG_CREDIT_SCORE_INCREMENT=5
EKG_CREDIT_SCORE_DECREMENT=-5

# ============================================
# 日志配置
# ============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/news_gt.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# ============================================
# 安全配置
# ============================================
SECRET_KEY=your-secret-key-change-this-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# 性能配置
# ============================================
MAX_CONCURRENT_INVESTIGATIONS=10
INVESTIGATION_TIMEOUT=300  # 秒
